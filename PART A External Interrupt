#include <xc.h>
#define _XTAL_FREQ 64000000L
#define LED1 LATBbits.LATB6
#define LED2 LATBbits.LATB7
static void interrupt ISR(void);
void delay (unsigned int x);

void main (void)
{
TRISBbits.TRISB0=1;
TRISBbits.TRISB6=0;
TRISBbits.TRISB7=0;
INTCONbits.INT0IE=1;
INTCONbits.INT0IF=0;
INTCON2bits.INTEDG0=0;

while(1)
{
LED1=~LED1;
delay(100);
}
}

static void interrupt ISR (void)
{
if(INTCONbits.INT0IF)
{
LED2=1;
delay(500);
LED2=0;
delay(500);
LED2=1;
delay(500);
LED2=0;
delay(500);
}
INTCONbits.INT0IF=0;
}

void delay (unsigned int x)
{
for(;x>0;x--)
__delay_ms(1);
}
